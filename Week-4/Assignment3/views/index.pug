doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Sign Up and Sign In Forms
  link(rel='stylesheet', type='text/css', href='style.css')
h2 Sign Up
form#signupForm
  input#signupEmail(type='email', placeholder='Email', required='')
  input#signupPassword(type='password', placeholder='Password', required='')
  input(type='submit', value='Sign Up')
h2 Sign In
form#signinForm
  input#signinEmail(type='email', placeholder='Email', required='')
  input#signinPassword(type='password', placeholder='Password', required='')
  input(type='submit', value='Sign In')
script(src='script.js')
